<div class="holder" style="margin: top 100px;">
    <div class="row">
        <div class="col-6 offset-3">
            <form action="/admin/novedades/agregar" method="post">
                <div class="row mb-3">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="row mb-3">
                    <input type="text" class="form-control" placeholder="Subtitulo" name="subtitulo">
                </div>
                <div class="row mb-3">
                    <input type="text" class="form-control" placeholder="Cuerpo" name="cuerpo">
                </div>
                <button type="submit" class="btn btn-primary">Agregar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>